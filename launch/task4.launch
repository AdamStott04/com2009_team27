<launch>
  <!-- Set the initial pose of your robot -->
  <arg name="initial_pose_x" default="1.418911"/>
  <arg name="initial_pose_y" default="-0.002944"/>
  <arg name="initial_pose_a" default="0.0"/>

  <!-- Set the model of your robot (e.g., burger, waffle, waffle_pi) -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

  <!-- Bringup the Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Launch the searchy4.py node -->
  <arg name="target_colour" default="Black"/>
  <node pkg="com2009_team27" type="search4.py" name="search_bot" output="screen">
    <param name="colour" value="$(arg target_colour)"/>
  </node>

</launch>
